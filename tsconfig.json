{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "rootDirs": [
            "src",
            "tests"
        ],
        "baseUrl": "src",
        "outDir": "dist",
        "moduleResolution": "node",
        "sourceMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "paths": {
            "@/tests/*": [
                "../tests/*"
            ],
            "@/*": [
                "*"
            ]
        }
    }
}
